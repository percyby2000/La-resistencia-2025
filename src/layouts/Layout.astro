---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';


interface Props {
	title?: string;
}

const { title = 'La Resistencia 2025 | Campamento para hijos de pastores' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preload" as="image" href="/fondo.svg">
		<link rel="preload" as="image" href="/hero.png">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-[#06121a]">
		<Navbar />
		<div class="flex-grow">
			<slot />
		</div>
		<Footer />
	</body>
</html>
